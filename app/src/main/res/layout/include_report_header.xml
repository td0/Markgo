<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_weight="10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/reporter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:gravity="start|center_vertical"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Budi Kurniawan"/>

        <TextView
            android:id="@+id/report_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="end|center_vertical"
            android:textSize="10sp"
            tools:text="3 May 2017"/>
    </LinearLayout>

    <TextView
        android:id="@+id/fixed_flair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green_a400"
        android:textColor="@color/text_white"
        android:textSize="15sp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingStart="3dp"
        android:paddingEnd="7dp"
        android:layout_marginEnd="5dp"
        android:text="@string/fixed_flair"
        android:drawableStart="@drawable/ic_check_white_18dp"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/report_menu"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_gravity="end|center_vertical"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_more_horiz_grey_900_18dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="upvote icon" />

</LinearLayout>
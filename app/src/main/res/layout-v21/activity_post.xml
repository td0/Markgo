<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.tadho.markgo.view.PostActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/appbar_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <!-- Toolbar -->
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Widget.AppTheme.ToolBar"
                android:elevation="8dp"
                app:layout_scrollFlags="enterAlways"/>
        </android.support.design.widget.AppBarLayout>
    </android.support.design.widget.CoordinatorLayout>

    <me.tadho.markgo.view.customView.ThumbnailView
        android:id="@+id/iv_preview"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/appbar_layout"
        android:background="@color/grey_500"
        android:contentDescription="@string/image_description_thumbnail" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_preview" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/post_textv_streetname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="19"
                android:textSize="17sp"
                android:textColor="@color/text_black_87"
                android:text="Jalan Letjend S Parman"/>

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/button_get_location"
                android:layout_width="0dp"
                android:padding="13dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:backgroundTint="@color/background_light"
                app:srcCompat="@drawable/ic_my_location_black_24dp"/>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_description"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/intro_code_input"
                android:lines="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="Description" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_submit_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:fabSize="normal"
        android:backgroundTint="@color/colorSecondary"
        app:srcCompat="@drawable/ic_send_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
